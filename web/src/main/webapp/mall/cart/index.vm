<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"></div>
        <div class="center sliding">$!{address.addName}<span class="color-gray" style="font-size: 15px;">（当前地址）</span></div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="cart.index" class="page">
		<!-- Scrollable page content-->
		<div class="page-content">
			#if($!{shopList})
			<div class="list-block cards-list media-list">
				#foreach($shop in $!{shopList})
				<ul>
					<li class="card" style="border-radius: 5px; margin: 10px;">
						<div class="card-content">
							<div class="card-content-inner" style="padding: 0;">
								<div class="item-content">
									<div class="item-media">
        								<img data-src="$!{env.imgUrl}/image/portal/logo.jpg" class="lazy" style="width: 40px; height: 40px;  border-radius: 5px;"></img>
        							</div>
        							<a class="item-inner" href="$!{env.appUrl}/item/list.htm?shopId=$!{shop.shopId}" data-ignore-cache="true">
        								<div class="item-title-row">
                                            <div class="item-title">$!{shop.shopName}</div>
        								</div>
        								<div class="item-title-row">
        									<div class="item-subtitle color-gray" style="font-size: 12px;">$!{shop.quantity}件商品 | ￥$!{shop.price}</div>
        								</div>
                                    </a>
									<div class="item-after">
										<a href="$!{env.appUrl}/item/list.htm?shopId=$!{shop.shopId}" data-ignore-cache="true">
											<i class="iconfont icon-right"></i>
										</a>
									</div>
                                </div>
							</div>
						</div>
						<div class="card-footer" style="min-height: 0; padding: 5px 15px;">
							<div class="a7w">
								<ul style="padding-left: 0; width: $!{velocityMath.mul($!{shop.cartList.size()},63)}px;">
                                    #foreach($cart in $!{shop.cartList})
                					<li>
										<a href="$!{env.appUrl}/item/list.htm?shopId=$!{shop.shopId}" data-ignore-cache="true">
            								#if($!{cart.itemFileList.size()} > 0)
            								<img src="$!{cart.itemFileList.get(0).filePath}"></img>
    										#end
                                        </a>
                                        <em>￥$!{cart.price}</em>
										#if($!{cart.quantity} > 1)
										<i>$!{cart.quantity}</i>
										#end
                					</li>
									#end
                                </ul>
							</div>
						</div>
					</li>
				</ul>
				#end
            </div>
			#else
			<div class="empty-list">
				<div class="empty-list-header">
					<h4>进货车快饿瘪了 T.T</h4>
					<span>快给我挑点宝贝</span>
				</div>
				<div class="empty-list-content">
				</div>
			</div>
			#end
		</div>
    </div>
</div>