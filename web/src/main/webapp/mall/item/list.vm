<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
		<div class="center sliding">$!{shop.shopName}</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="item.list" class="page no-tabbar">
		<!-- Search bar -->
		<form data-search-list=".list-block-search" data-search-in=".item-title" class="searchbar searchbar-init item-list-searchbar">
			<div class="searchbar-input">
				<input type="search" placeholder="搜索" /><a href="#" class="searchbar-clear"></a>
			</div><a href="#" class="searchbar-cancel">取消</a>
		</form>
		
		<!-- Search bar overlay -->
		<div class="searchbar-overlay"></div>
			
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="list-block media-list list-block-search searchbar-found" style="font-size: 15px;">
				<ul>
					#foreach($item in $!{itemList})
                    <li>
						<div class="item-content">
							<div class="item-media">
								#if($!{item.itemFileList.size()} > 0)
								<img data-src="$!{item.itemFileList.get(0).filePath}" class="lazy" style="width: 60px; height: 60px;"></img>
								#end
							</div>
							<a href="$!{env.appUrl}/item/detail.htm?itemId=$!{item.itemId}" class="item-inner" style="color: inherit;" data-ignore-cache="true">
								<div class="item-title-row" style="margin-top: 3px;">
                                    <div class="item-title" style="font-weight: 400;"><span class="little-tag">新品</span>$!{item.itemName}</div>
									<div class="item-after"></div>
								</div>
								<div class="item-title-row" style="margin-top: 3px;">
									<div class="item-subtitle" style="font-size: 13px; color: #8e8e93;">
										#if($!{item.skuList.size()} > 0)
										$!{item.skuList.get(0).propertiesName} ...
										#end
									</div>
									<div class="item-after"></div>
								</div>
								<div class="item-title-row" style="margin-top: 3px;">
                                    <div class="item-title" style="font-weight: 400; color: #FF5500;">
										￥$!{item.price}
                                        <del style="font-size: 10px; color: #999; margin-left: 5px;">
											<span style="">￥$!{item.origin}</span>
										</del>
									</div>
									<div class="item-after"></div>
								</div>
                            </a>
						</div>
					</li>
					#end
				</ul>
			</div>
        </div>
    </div>
</div>