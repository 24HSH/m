<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
 "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="{http://mall}mall$cart"
		extends="{http://mall}mall$framework" namespace="/cart">

		<action name="index" class="cartAction" method="index">
			<result name="success">/mall/cart/index.vm</result>
		</action>
		
		<action name="add" class="cartAction" method="add"></action>
		
		<action name="remove" class="cartAction" method="remove"></action>
		
		<action name="num" class="cartAction" method="num"></action>
		
	</package>
</struts>