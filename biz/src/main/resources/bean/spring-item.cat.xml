<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="itemCatAction" class="com.hsh24.mall.item.action.ItemCatAction" parent="baseAction" scope="request">
		<property name="itemCatService" ref="itemCatService" />
	</bean>
	
	<bean id="itemCatService" class="com.hsh24.mall.item.service.impl.ItemCatServiceImpl">
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="itemCatDao" ref="itemCatDao" />
	</bean>
	
	<bean id="itemCatDao" class="com.hsh24.mall.item.dao.impl.ItemCatDaoImpl" parent="baseDao" />
	
</beans>